<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFF">

    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textStyle="bold"
            android:id="@+id/lives1"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/lives2"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/lives3"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G"
            android:textStyle="bold"
            android:id="@+id/lives4"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/lives5"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textStyle="bold"
            android:id="@+id/lives6"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textStyle="bold"
            android:id="@+id/lives7"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/letter1"
                android:text="W"
                android:textSize="75sp"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/letter2"
                android:text="W"
                android:textSize="75sp"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="#000"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/letter3"
            android:text="W"
            android:textSize="75sp"/>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="#000"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/letter4"
                android:text="W"
                android:textSize="75sp"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="#000"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">


        <Button
            android:id="@+id/guess1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess4"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/guess5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess8"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/guess9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/guess12"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>

</LinearLayout>
